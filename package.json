{
  "name": "open-tech-lab",
  "version": "1.0.0",
  "description": "A self-hosted, community-driven tech workspace powered by Appwrite, SQLite, and Cloudflare Workers",
  "type": "module",
  "scripts": {
    "dev:frontend": "vite",
    "dev:worker": "wrangler dev",
    "dev:appwrite": "docker run -p 80:80 -p 443:443 appwrite/appwrite:1.6",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:worker\"",
    "build": "tsc && vite build",
    "build:worker": "wrangler deploy --dry-run",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,css}\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "deploy": "npm run deploy:pages && npm run deploy:worker && npm run deploy:appwrite",
    "deploy:pages": "vite build && gh-pages -d dist",
    "deploy:worker": "wrangler deploy",
    "deploy:appwrite": "flyctl deploy",
    "prepare": "husky install"
  },
  "dependencies": {
    "appwrite": "^15.0.0",
    "drizzle-orm": "^0.36.0",
    "idb": "^8.0.0",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.18"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "better-sqlite3": "^11.0.0",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.28.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "gh-pages": "^6.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
